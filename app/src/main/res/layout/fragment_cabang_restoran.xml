<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CabangRestoranFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/restoranList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardBackgroundColor="#901c18"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/restoranName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/restoran_name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#fff4e7" />

            <TextView
                android:id="@+id/restoranAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restoran_address"
                android:textSize="15sp"
                android:textColor="#fff4e7"/>

            <TextView
                android:id="@+id/restoranPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/restoran_phone"
                android:textSize="14sp"
                android:textColor="#fff4e7"/>

            <Button
                android:id="@+id/btnMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maps"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="#f7e1c9"
                android:textColor="#901c18"
                app:cornerRadius="20dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>